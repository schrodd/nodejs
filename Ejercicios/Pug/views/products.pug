doctype html
head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    style.
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400;500;600;700&family=PT+Mono&display=swap');
    link(rel='stylesheet' href='style.css')
    title Handlebars + Express
body
    .title
        h1 Handlebars + Express
        nav
            a(href='/') Inicio
            a(href='/products') Productos
    .product-container
        h1 Productos
        .col-title
            span Nombre
            span Precio
            span Imagen
        if products.length == 0
            h1.no-prod No hay productos
        each val in products
            .product-item
                span.product-title= val.title
                span.product-price= val.price
                span.product-image
                a(href='' + val.thumbnail target='_blank')
                    img(src='' + val.thumbnail alt='' + val.title)
